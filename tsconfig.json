{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES6",                                 
    /* Modules */
    "module": "commonjs",  
    "rootDir": "./src",                                
    "outDir": "./dist",
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,                                  
    /* Completeness */
    "skipLibCheck": true       
  },
  "include": ["src/**/*.ts"]
}

